// De esta forma incluyo otra vista
extends ../../layout.jade

// Acá defino el bloque que espera el layout
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        h1 Subir nueva imagen
        form(action="/app/imagenes", method="POST", enctype="multipart/form-data")
            div(class="form-group")
                label(for="titulo") Título 
                input(type="text", name="titulo", placeholder="Título", id="titulo", class="form-control")

            div(class="form-group")
                label(for="archivo") Archivo 
                input(type="file", name="archivo", id="archivo", class="form-control")

            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")                    
                    input(type="submit", value="Enviar", class="btn btn-info")