// De esta forma incluyo otra vista
extends ../../layout.jade

// Acá defino el bloque que espera el layout
block contenido
    div(class="container")
        h1 Mis imágenes
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2
                        a(href="/app/imagenes/#{imagen._id}/edit", class="right-space") Editar
                        form(action="/app/imagenes/#{imagen._id}?_method=DELETE", class="link", method="POST")
                            input(type="submit", value="Eliminar", class="")
            