// De esta forma incluyo otra vista
extends ../../layout.jade

// Acá defino el bloque que espera el layout
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        h1 Editar imagen
        // Esto se vale de una dependencia llamada method-override
        form(action="/app/imagenes/#{imagen._id}?_method=PUT", method="POST")
            div(class="form-group")
                label(for="titulo") Título 
                input(type="text", name="titulo", placeholder="Título", id="titulo", class="form-control", value="#{imagen.title}")

            div(class="form-group")
                label(for="archivo") Archivo 
                input(type="file", name="archivo", id="archivo", class="form-control")

            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")                    
                    input(type="submit", value="Actualizar", class="btn btn-info")