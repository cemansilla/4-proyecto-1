// De esta forma incluyo otra vista
extends ./layout.jade

// Ac√° defino el bloque que espera el layout
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        form(action="/users", method="POST")
            div(class="form-group")
                label(for="email") Email 
                input(type="text", name="email", placeholder="Email", id="email", class="form-control")

            div(class="form-group")
                label(for="password") Password 
                input(type="password", name="password", placeholder="Password", id="password", class="form-control")

            div(class="form-group")
                label(for="password_confirmation") Confirma tu password 
                input(type="password", name="password_confirmation", placeholder="Confirma tu password", id="password_confirmation", class="form-control")

            div(class="form-group")
                label(for="username") Username 
                input(type="password", name="username", placeholder="Username", id="username", class="form-control")

            div(class="row top-space")
                 div(class="col-xs-12 col-sm-6")   
                    input(type="submit", value="Enviar", class="btn btn-info")
                 div(class="col-xs-12 col-sm-6 text-right")
                    a(href="/login") Ya tengo cuenta